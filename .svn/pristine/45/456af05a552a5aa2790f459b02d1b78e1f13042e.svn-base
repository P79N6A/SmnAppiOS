<!--
  Generated template for the BabyDetailPage page.

  See http://ionicframework.com/docs/components/#navigation for more info on
  Ionic pages and navigation.
-->
<ion-header>

  <ion-navbar>
    <ion-title text-capitalize>{{proInfo.nickname}}</ion-title>
  </ion-navbar>

</ion-header>

<ion-content padding>
<ion-grid class="details-profile">
  <ion-row>
    <ion-col col-4>
  <ion-card>
      <img [src]="proInfo.pro_pic"/>
  </ion-card>
  </ion-col>
    <ion-col col-8>
  <ion-card>
      <ion-card-content text-capitalize>
        <h2>{{proInfo.nickname}}</h2>, {{proInfo.age}}
      </ion-card-content>
      <ion-card-content text-capitalize>
       {{proInfo.address}}
      </ion-card-content>
      <!--<ion-card-content>
        Member Since: {{proInfo.memberSince}}
      </ion-card-content>
      <ion-card-content>
        Last Active: {{proInfo.last_login}}
      </ion-card-content>-->
  </ion-card>
  </ion-col>
    </ion-row>
</ion-grid>
<div class="highestbid-cont">
<ion-card>
<ion-card-content>
    <div class="highest-bid">
	  <h2>Highest Bid <span>â‚¬950</span></h2>
	</div>
  </ion-card-content>
</ion-card>
<ion-card>
<ion-card-content class="auction-timer">
    <div class="auction-time">
	  <h2>Auction Closes In</h2>
      <ion-item id="auctionTimer">
            <ion-grid>
              <ion-row>
                <ion-col id="hours"></ion-col><ion-col id="minuts"></ion-col><ion-col id="seconds"></ion-col>
              </ion-row>
              <ion-row class="time-txt">
                <ion-col>HOURS</ion-col><ion-col>MINUTS</ion-col><ion-col>SECONDS</ion-col>
              </ion-row>
            </ion-grid>
          </ion-item>
      
    </div>
	<ion-grid class="place-bid">
  <ion-row>
    <ion-col col-6>
    <ion-item>
        <ion-input type="text" placeholder="$0"></ion-input>
    </ion-item>
	</ion-col>
	 <ion-col col-6>
    <button ion-button color="danger">PLACE YOUR BID</button>
	</ion-col>
	</ion-row>
 </ion-grid>
  </ion-card-content>
</ion-card>
</div>

  <ion-toolbar no-border-top class="details-tabbing">
      <ion-segment [(ngModel)]="babyDetails">
        <ion-segment-button value="about">
          ABOUT
        </ion-segment-button>
        <ion-segment-button value="photos">
          PHOTOS
        </ion-segment-button>
        <ion-segment-button value="videos">
          VIDEOS
        </ion-segment-button>
      </ion-segment>
  </ion-toolbar>
    <div [ngSwitch]="babyDetails" class="babyDetails">
        <ion-list *ngSwitchCase="'about'">
            <ion-card>
			<ion-card-content>
			<ion-grid>
  <ion-row>
    <ion-col col-6>
	<ul text-capitalize>
                 <li>
                  Name: {{proInfo.nickname}}
                </li>
				<li>
                  Age: {{proInfo.age}}
                </li>
				<li>
                    Body Type: {{proInfo.bodyType}}
					</li>
				<li>
                    Drinking: {{proInfo.drinking}}
					</li>
				<li>
                    Smoking: {{proInfo.smoking}}
					</li>
					</ul>
				</ion-col>
				<ion-col col-6>
				<ul text-capitalize>
				<li>Eyes: {{proInfo.eyesColor}}
				</li>
				<li>
                    Hair Length: {{proInfo.hairLength}}
					</li>
				<li>
                    Height: {{proInfo.height}}
					</li>
				<li>
                    Shoe Size: {{proInfo.shoe_size}}
					</li>
				<li>
                    Bra Size: {{proInfo.suit_size}}
					</li>
				</ul>
				</ion-col>
				</ion-row>
 </ion-grid>
 </ion-card-content>
            </ion-card>
        </ion-list>
        <ion-list *ngSwitchCase="'photos'" class="profile-photos">
            <!--<ion-card *ngFor="let babyImg of publicImage">
                <ion-card  (click)="openImageModel(babyImg.filename)">
                    <img [src]="babyImg.filename"/>
                </ion-card>
            </ion-card>-->
			<ion-grid>
  <ion-row>
  <ion-col col-4 class="private-img"><a href="#"><img src="" /><h3>Private Photo<span>Sent Request</span></h3></a></ion-col>
    <ion-col col-4 *ngFor="let babyImg of publicImage" (click)="openImageModel(babyImg.filename)"><img [src]="babyImg.filename"/></ion-col>
  </ion-row>
</ion-grid>
        </ion-list>
        <ion-list *ngSwitchCase="'videos'">
		<ion-grid>
  <ion-row>
    <ion-col col-6 *ngFor="let babyVideo of publicVideo" text-center><img [src]="babyVideo.filename"/></ion-col>
  </ion-row>
</ion-grid>
        </ion-list>
    </div>
</ion-content>