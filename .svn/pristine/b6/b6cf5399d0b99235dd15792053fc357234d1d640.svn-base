<ion-header>

  <ion-navbar>
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Join Now</ion-title>
  </ion-navbar>

</ion-header>

<ion-content padding>
  <!--<ion-title>Join Now</ion-title>
  <ion-title class="main-head">Want to Become</ion-title>-->
  <ion-list radio-group [(ngModel)]="userType" class="login-inputs checkboxes-join">
    <ion-item>
      <ion-radio item-left value="sugarDaddy" checked></ion-radio>
      <ion-label>Sugar Daddy/Sugar Mommy</ion-label>
    </ion-item>
    <ion-item>
      <ion-radio item-left value="sugarBaby"></ion-radio>
      <ion-label>Sugar Baby</ion-label>
    </ion-item>
  </ion-list>

  <ion-list class="login-inputs">

    <ion-item>
      <ion-label stacked>Nick Name</ion-label>
      <ion-input type="text" placeholder="Enter Nick Name"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label stacked>Email</ion-label>
      <ion-input type="email" placeholder="Plese Enter Email"></ion-input>
    </ion-item>

    <ion-item>
      <ion-label stacked>Password</ion-label>
      <ion-input type="password" placeholder="Plese Enter Password"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label stacked>Confirm Password</ion-label>
      <ion-input type="password" placeholder="Enter Comfirm Password"></ion-input>
    </ion-item>
    <ion-item>
      <ion-label stacked>Phone</ion-label>
      <ion-input type="text" placeholder="Enter Phone"></ion-input>
    </ion-item>
    <div class="join-checkboxes">
      <ion-grid>
        <ion-row>
          <ion-col col-12>
            <ion-title>I,m Over 18:</ion-title>
          </ion-col>
        </ion-row>
      </ion-grid>
      <ion-list radio-group [(ngModel)]="age">
        <ion-grid>
          <ion-row>
            <ion-col col-6>
              <ion-item>
                <ion-radio item-left value="yes" checked></ion-radio>
                <ion-label>Yes</ion-label>
              </ion-item>
            </ion-col>
            <ion-col col-6>
              <ion-item>
                <ion-radio item-left value="no"></ion-radio>
                <ion-label>No</ion-label>
              </ion-item>
            </ion-col>
          </ion-row>
        </ion-grid>
      </ion-list>
      <ion-grid>
        <ion-row>
          <ion-col col-12>
            <ion-title>I'm a:</ion-title>
          </ion-col>
        </ion-row>
      </ion-grid>
      <ion-list radio-group [(ngModel)]="gender">
        <ion-grid>
          <ion-row>
            <ion-col col-6>
              <ion-item>
                <ion-radio item-left value="Man" checked></ion-radio>
                <ion-label>Man</ion-label>
              </ion-item>
            </ion-col>
            <ion-col col-6>
              <ion-item>
                <ion-radio item-left value="woman"></ion-radio>
                <ion-label>Woman</ion-label>
              </ion-item>
            </ion-col>
          </ion-row>
        </ion-grid>
      </ion-list>
      <ion-grid>
        <ion-row>
          <ion-col col-12>
            <ion-title>Interested In:</ion-title>
          </ion-col>
        </ion-row>
      </ion-grid>
      <ion-list radio-group [(ngModel)]="interest">
        <ion-grid>
          <ion-row>
            <ion-col col-6>
              <ion-item>
                <ion-radio item-left value="Man" checked></ion-radio>
                <ion-label>Man</ion-label>
              </ion-item>
            </ion-col>
            <ion-col col-6>
              <ion-item>
                <ion-radio item-left value="woman"></ion-radio>
                <ion-label>Woman</ion-label>
              </ion-item>
            </ion-col>
            <ion-col col-6>
              <ion-item>
                <ion-radio item-left value="Both"></ion-radio>
                <ion-label>Both</ion-label>
              </ion-item>
            </ion-col>
          </ion-row>
        </ion-grid>
      </ion-list>
    </div>
    <button block color="primary" ion-button="" class="disable-hover button button-ios btn-login">Submit</button>

  </ion-list>
</ion-content>